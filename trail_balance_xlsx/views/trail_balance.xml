<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="trail_balance_xlsx_report_form" model="ir.ui.view">
            <field name="name">trail.balance.xlsx.report</field>
            <field name="model">account.balance.report</field>
            <field name="inherit_id" ref="base_accounting_kit.account_report_balance_view"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='check_report']" position="after">
                    <button name="print_xlsx"
                            string="XLSX"
                            type="object"
                            default_focus="1"
                            class="oe_highlight"/>


                </xpath>
            </field>
        </record>


    </data>
    <report id="report_trail_balance_xlsx"
            model="account.balance.report"
            string="Trail Balance XLSX Report"
            report_type="xlsx"
            name="trail_balance_xlsx.report_trail_xlsx"
            file="trail_balance_xlsx.report_trail_xlsx"
    />
</odoo>


