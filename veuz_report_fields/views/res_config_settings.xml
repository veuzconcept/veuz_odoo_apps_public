<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_report_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.report</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="40"/>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]//div[@id='analytic']" position="after">
                <h2 attrs="{'invisible': [('invoice_report_layout', '!=', True)]}">Invoice Reports</h2>
                <div class="row mt16 o_settings_container" name="report_layout_container" attrs="{'invisible': [('invoice_report_layout', '!=', True)]}">
                    <field name="invoice_report_layout" invisible="1"/>
                    <div class="col-12 col-lg-6 o_setting_box" id="report_layout">
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Report Layout</span>
                            <span class="fa fa-lg fa-building-o" role="img"/>
                            <div class="text-muted">
                                Choose the layout of your invoice report
                            </div>
                            <div class="content-group">
                                <div class="mt8">
                                    <button name="action_view_report_layout"
                                            string="Configure Report Layout"
                                            type="object" class="oe_link"
                                            icon="fa-arrow-right"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
