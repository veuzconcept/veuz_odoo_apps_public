<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_bank_form_inherit" model="ir.ui.view">
        <field name="name">bank.form</field>
        <field name="model">res.bank</field>
        <field name="inherit_id" ref="base.view_res_bank_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//group/field[@name='bic']" position="after">
                    <field name="ifsc_code"/>
                    <field name="bank_branch"/>
                </xpath>
            </data>
        </field>
    </record>

    <record id="account_invoice_form_custom" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group//field[@name='invoice_payment_term_id']" position="attributes">
                <attribute name="attrs">{'required': [('move_type', '=', 'out_invoice')]}</attribute>
            </xpath>

            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="customer_po" attrs="{'invisible': [('move_type', '!=', 'out_invoice')]}"/>
                <field name="customer_po_date" attrs="{'invisible': [('move_type', '!=', 'out_invoice')]}"/>

                <field name="currency" invisible="1"/>
                <field name="child_ids_partner" invisible="1"/>
                <field name="amount_total_words" invisible="1"/>
                <field name="amount_total_arabic" invisible="1"/>
                <field name="amount_in_words" invisible="1"/>
            </xpath>
<!--            <xpath expr="//field[@name='narration']" position="replace"/>-->
            <xpath expr="//form//sheet//group//group[@id='header_left_group']" position="inside">
                <field name="our_ref" attrs="{'invisible': [('move_type', '!=', 'out_invoice')]}"/>
                <field name="place_of_supply" attrs="{'invisible': [('move_type', '!=', 'out_invoice')]}"/>
                <field name="contact_id" string="Contact person" invisible="1"/>
            </xpath>
            <xpath expr="//page//group//group//field[@name='partner_bank_id']" position="after">
                <field name="bank_in_report" force_save="1"/>
            </xpath>
            <!--            <xpath expr="//group[@id='header_right_group']//label[@for='journal_id']" position="attributes">-->
            <!--                <attribute name="attrs">{'invisible': [('move_type', '=', 'out_invoice')]}</attribute>-->
            <!--            </xpath>-->
            <!--            <xpath expr="//group[@id='header_right_group']//div[@name='journal_div']" position="replace"/>-->
            <!--            <xpath expr="//group[@id='header_right_group']//label[@for='invoice_payment_term_id']" position="attributes">-->
            <!--                <attribute name="attrs">{'invisible': [('move_type', '=', 'out_invoice')]}</attribute>-->
            <!--            </xpath>-->
            <!--            <xpath expr="//group[@id='header_right_group']//div[@class='d-flex']" position="replace"/>-->
        </field>
    </record>


</odoo>
