<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_document_layout" model="ir.ui.view">
            <field name="name">Document Layout</field>
            <field name="model">vz.report.layout</field>
            <field name="arch" type="xml">
                <form class="o_document_layout">
                    <group>
                        <group class="o_document_layout_company">
                            <field name="company_id" invisible="1"/>
                            <field name="invoice_report_layout" widget="radio" attrs="{'invisible': [('report_status', '!=', 'both')]}"/>
                            <field name="report_status" readonly="1" invisible="1"/>
                            <field name="logo" widget="image" options="{'size': [0, 50]}"/>
                            <label for="header_color" string="Header Colors" attrs="{'invisible': [('invoice_report_layout', '=', 'tax invoice')]}"/>
                            <div class="o_document_layout_colors" attrs="{'invisible': [('invoice_report_layout', '=', 'tax invoice')]}">
                                <field name="header_color" widget="color" />
                                <field name="header_text_color" widget="color"/>
                                <field name="custom_colors" class="d-none"/>
                                <button class="btn btn-link" title="Reset to default colors"
                                        attrs="{'invisible': [('custom_colors', '=', False)]}">
                                    <label for="custom_colors" class="fa fa-refresh" string=""/>
                                </button>
                            </div>
                            <label for="line1_color" string="Line Colors" attrs="{'invisible': [('invoice_report_layout', '=', 'tax invoice')]}"/>
                            <div class="o_document_layout_colors" attrs="{'invisible': [('invoice_report_layout', '=', 'tax invoice')]}">
                                <field name="line1_color" widget="color"/>
                                <field name="line2_color" widget="color"/>
                                <field name="default_line_colors" class="d-none"/>
                                <button class="btn btn-link" title="Reset to default colors"
                                        attrs="{'invisible': [('default_line_colors', '=', False)]}">
                                    <label for="default_line_colors" class="fa fa-refresh" string=""/>
                                </button>
                            </div>
                            <field name="invoice_without_header_footer"/>
                            <field name="display_logo"
                                   attrs="{'invisible': [('invoice_without_header_footer', '=', True)]}"/>
                            <field name="show_table_border" attrs="{'invisible': [('invoice_report_layout', '=', 'tax invoice')]}"/>
                            <field name="remove_product_image" attrs="{'invisible': [('invoice_report_layout', '=', 'tax invoice')]}"/>
                            <field name="date_of_supply" attrs="{'invisible': [('invoice_report_layout', '=', 'tax invoice')]}"/>
                            <field name="total_on_header" attrs="{'invisible': [('invoice_report_layout', '=', 'tax invoice')]}"/>
                            <field name="bank_in_report_default_or_not"/>

                            <field name="approved_by" attrs="{'invisible': [('invoice_report_layout', '=', 'tax invoice')]}"/>
                            <field name="received_by"/>
                            <field name="prepared_by"/>
                            <field name="prepared_person" attrs="{'invisible': ['|',('prepared_by', '!=', True),('invoice_report_layout', '=', 'tax invoice')]}"/>
                            <field name="salesman" attrs="{'invisible': [('invoice_report_layout', '=', 'tax invoice')]}"/>
                            <field name="salesman_name" attrs="{'invisible': [('salesman', '=', False)]}"/>
                        </group>
                        <div>
                            <field name="preview" widget="iframe_wrapper"/>
                            <button name="veuz_report_fields.action_custom_report_preview" string="Download PDF Preview"
                                    type="action" class="oe_link" icon="fa-arrow-right" attrs="{'invisible': [('invoice_report_layout', '=', 'tax invoice')]}"/>
                            <button name="veuz_report_fields.action_tax_invoice_report_preview" string="Download PDF Preview"
                                    type="action" class="oe_link" icon="fa-arrow-right" attrs="{'invisible': [('invoice_report_layout', '!=', 'tax invoice')]}"/>
                        </div>
                    </group>
                    <footer>
                        <button string="Save" class="btn-primary" type="object" name="document_layout_save"
                                data-hotkey="q"/>
                        <button special="cancel" data-hotkey="z" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_document_layout_configurator" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Configure Your Invoice Report layout</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="res_model">vz.report.layout</field>
            <field name="view_id" ref="veuz_report_fields.view_document_layout"/>
        </record>

    </data>
</odoo>

