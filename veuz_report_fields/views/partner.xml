<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_partner_form_inheritsss" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='vat']" position="attributes">
                    <attribute name="string">VAT No</attribute>
                </xpath>
            </data>
        </field>
    </record>

    <record id="partner_form_inherits_for_fax" model="ir.ui.view">
        <field name="name">res.partner.form.fr.fax</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="sms.res_partner_view_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='mobile_blacklisted']" position="after">
                    <field name="fax_id"/>
                </xpath>
            </data>
        </field>
    </record>

</odoo>